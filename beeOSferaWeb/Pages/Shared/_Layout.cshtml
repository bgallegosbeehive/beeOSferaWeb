<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- MATERIAL ICONS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,500,1,0" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <!-- JS -->
    <script src="~/js/layout.js" defer></script>
   

    @* Dark theme *@
</head>

<body>
    <div class="main">
        <!-- Top Bar -->
        <div class="content active">
            <div class="top-navbar">
                <div class="material-symbols-rounded" id="menu-icon">menu </div>
                <div class="header-image">
                    <img style="height: fit-content; width: fit-content;" src="/images/images/ImageDarkText.png" alt="">
                </div>
                <div class="header-darkmode-switch">
                    <i class="material-symbols-rounded dark-mode-button" id="switch">clear_night</i>
                </div>
                <div class="header-date">
                    <p id="fecha"></p>
                    <p id="hora"></p>
                </div>
            </div>

            <main class="main-renderBody">
                @RenderBody()
            </main>
        </div>

        <div class="side-navbar active">

            <div class="list-top">
                <li>
                    <a href="#">
                        <span class="text"> <img src="/images/images/Image.png" style="height: fit-content; width: fit-content;" alt=""></span>
                    </a>
                </li>
            </div>

            <div class="icon-list">
                <ul>
                    <li>
                        <a href="#">
                            <span class="icon"><i class='material-symbols-rounded'>build_circle</i></span>
                            <span class="text">General</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Portal/Residencial/Residencial">
                            <span class="icon"><i class='material-symbols-rounded'>home</i></span>
                            <span class="text">Residencial</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="icon"><i class='material-symbols-rounded'>corporate_fare</i></span>
                            <span class="text">Empresarial</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="icon"><i class='material-symbols-rounded'>school</i></span>
                            <span class="text">Escolar</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="icon"><i class='material-symbols-rounded'>apartment</i></span>
                            <span class="text">Ciudad</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="icon"><i class='material-symbols-rounded'>error</i></span>
                            <span class="text">Acerca de </span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="list-bottom">
                <ul>
                    <li>
                        <a href="#">
                            <span class="icon"><i class='material-symbols-rounded'>account_circle</i></span>
                            <span class="text">Usuario</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Login/Login">
                            <span class="icon"><i class='material-symbols-rounded'>power_settings_new</i></span>
                            <span class="text">Cerrar Sesión</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</body>
</html> 